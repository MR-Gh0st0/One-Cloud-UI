---
interface Props {
  title?: string;
}

const { title = "1Cloud - IT Services & Solutions" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-slate-950 text-white font-['Inter']">
    <slot />
    <script>
      import Lenis from '@studio-freight/lenis';
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';

      gsap.registerPlugin(ScrollTrigger);

      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent-gradient: linear-gradient(45deg, rgb(14, 165, 233), rgb(79, 70, 229) 30%, white 60%);
  }

  html {
    font-family: 'Inter', system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }

  .gradient-text {
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .gradient-border {
    background: linear-gradient(#13151a, #13151a) padding-box,
                var(--accent-gradient) border-box;
    border: 2px solid transparent;
  }
</style>