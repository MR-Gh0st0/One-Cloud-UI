---
const timeline = [
  {
    year: '2015',
    title: 'Company Founded',
    description: 'Started with a vision to revolutionize cloud computing',
  },
  {
    year: '2021',
    title: 'Global Expansion',
    description: 'Expanded operations to 3 continents',
  },
  {
    year: '2022',
    title: 'Enterprise Cloud Solutions',
    description: 'Launched enterprise-grade cloud solutions',
  },
  {
    year: '2025',
    title: 'AI Integration',
    description: 'Introduced AI-powered cloud management',
  },
];
---

<section id="journey" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold gradient-text">Our Journey</h2>
      <p class="mt-4 text-lg text-gray-400">
        Building the future of cloud technology
      </p>
    </div>

    <div class="relative">
      <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gradient-to-b from-primary-600 to-slate-800"></div>

      <div class="space-y-12">
        {timeline.map((item, index) => (
          <div class="relative group">
            <div class={`flex items-center ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`}>
              <div class="w-1/2"></div>
              <div class="w-3 h-3 rounded-full bg-primary-600 shadow-lg relative z-10 transform group-hover:scale-150 transition-transform duration-300"></div>
              <div class="w-1/2"></div>
            </div>
            
            <div class={`mt-6 ${index % 2 === 0 ? 'text-right pr-8' : 'text-left pl-8'}`}>
              <div class="inline-block bg-slate-800 p-6 rounded-2xl gradient-border transform transition-all duration-300 hover:scale-105">
                <span class="text-primary-400 text-sm font-semibold">{item.year}</span>
                <h3 class="text-xl font-bold text-white mt-1">{item.title}</h3>
                <p class="text-gray-400 mt-2">{item.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>



