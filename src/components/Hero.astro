---
import CloudAnimation from "./CloudAnimation.astro";
---


<section
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16"
>
  <!-- Cloud Animation Layer -->
  <div class="absolute inset-0 z-0">
    <CloudAnimation />
  </div>

  <!-- Background Gradient Layers -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute inset-0 bg-gradient-to-b from-slate-950/50 to-slate-900/50 backdrop-blur-[120px]"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(14,165,233,0.3),transparent_50%)]"
    >
    </div>
  </div>

  <!-- Content Wrapper -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
    <div class="flex flex-col items-center space-y-8">
      <!-- Callout Badge -->
      <!-- <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-purple-500 to-blue-600 text-white font-medium">
        <span class="animate-pulse mr-2">âš¡</span>
        <span class="text-sm">Next Generation Cloud Solutions</span>
      </div> -->

      <!-- Main Heading -->
      <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold tracking-tight">
        <span class="relative gradient-text animate-gradient">1 Cloud</span>
        <br />
        <span class="block mt-2 text-3xl sm:text-5xl lg:text-6xl text-gray-300">
          <span id="typing-text"></span>
        </span>
      </h1>

      <!-- Description -->
      <!-- <p class="mt-6 text-lg sm:text-xl text-gray-400 max-w-3xl">
        Transform your business with cutting-edge cloud solutions and enterprise-grade IT services
      </p> -->

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 mt-4">
        <a
          href="#contact"
          class="group relative px-8 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-full overflow-hidden transition-all duration-300 transform hover:scale-105"
        >
          <span class="relative flex items-center justify-center">
            Get Started
            <svg
              class="w-5 h-5 ml-2 -mr-1 group-hover:translate-x-1 transition-transform duration-300"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </a>
        <a
          href="#services"
          class="group px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 border border-slate-600 hover:border-slate-500"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>

  <!-- Gradient Bottom Overlay -->
  <div
    class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-slate-950 to-transparent z-10"
  >
  </div>
</section>

<script>
  const textArray = [
    "IT Services and Solutions...",
    "New Related Cloud Solution...",
    "Infrastructure as a Service",
    // "Platform as a Service",
    // "Software as a Service"
  ];

  let textIndex = 0;
  const typingElement = document.getElementById("typing-text");

  function typeEffect(text, i = 0) {
    if (i < text.length) {
      typingElement.innerHTML = text.slice(0, i + 1);
      setTimeout(() => typeEffect(text, i + 1), 100); // Increased typing speed for smoother effect
    } else {
      setTimeout(() => deleteEffect(text), 2000); // Delay before starting delete effect
    }
  }

  function deleteEffect(text, i = text.length) {
    if (i >= 0) {
      typingElement.innerHTML = text.slice(0, i);
      setTimeout(() => deleteEffect(text, i - 1), 50); // Faster delete speed for more dynamic effect
    } else {
      textIndex = (textIndex + 1) % textArray.length;
      setTimeout(() => typeEffect(textArray[textIndex]), 800); // Delay before starting next type effect
    }
  }

  typeEffect(textArray[textIndex]);
</script>

<style>
  /* Gradient animation */
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 8s linear infinite;
  }

  /* Gradient keyframe animation */
  @keyframes gradient {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Text color effect using cloud-themed gradient */
  #typing-text {
    background-image: linear-gradient(
      90deg,
      #00c6ff,
      #0072ff,
      #3a8ee6,
      #42a1d4
    );
    -webkit-background-clip: text;
    color: transparent;
    animation: gradientTextColor 5s linear infinite;
  }

  /* Smooth color transition for the typing text */
  @keyframes gradientTextColor {
    0% {
      background-position: 0%;
    }
    50% {
      background-position: 100%;
    }
    100% {
      background-position: 0%;
    }
  }
</style>
