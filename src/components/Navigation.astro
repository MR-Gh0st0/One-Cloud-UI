---
const links = [
  { text: 'Home', href: '#home' },
  { text: 'About', href: '#about' },
  { text: 'Journey', href: '#journey' },
  { text: 'Services', href: '#services' },
  { text: '1Cloud NG', href: '#cloud' },
  { text: 'Customer', href: '#customer' },
  { text: 'Projects', href: '#projects' },
  { text: 'Contact Us', href: '#contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-lg border-b border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0">
        <a href="#" class="text-2xl font-bold gradient-text">
          One Cloud
          <!-- <img src="src/assets/onecloudlogo.png" alt="One Cloud Logo" width="100" height="00" />       -->
        </a>
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {links.map(link => (
            <a
              href={link.href}
              class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-slate-800 transition-all duration-300"
            >
              {link.text}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</nav>