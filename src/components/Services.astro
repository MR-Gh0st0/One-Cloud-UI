<section id="services" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- <h2 class="text-3xl sm:text-4xl font-bold gradient-text">Our Services</h2> -->
